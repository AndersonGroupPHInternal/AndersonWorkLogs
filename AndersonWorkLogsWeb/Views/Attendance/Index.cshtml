
@{
    ViewBag.Title = "Index";
}

<div ng-controller="AttendanceController as model" ng-init="model.Initialise()">
    <div class="row">
        <div class="col-sm-4">
            <a ng-click="model.ApproveSelected()" class="btn btn-default">Approve</a>
            <a href="../Attendance/Create" class="btn btn-default">Create</a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover table-sm table-bordered ">
                <thead>
                    <tr class="thead-inverse">
                        <th><input type="checkbox" ng-click="model.ToggleAll()" ng-model="model.isAllSelected"/></th>
                        <th>AttendanceId</th>
                        <th>UserName</th>
                        <th>TimeIn</th>
                        <th>TimeOut</th> 
                        <th>TotalHours</th>
                        <th>FullName</th>
                        <th>ManagerId</th>
                        <th>ApprovedBy</th>
                        <th>ApprovedDate</th>
                        <th>Approved</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="clickableRow" name="attendanceTable" ng-repeat="attendance in model.Attendances" ng-click="$event.originalEvent.dropdown">
                        <td><input type="checkbox" ng-model="attendance.Selected" ng-change="model.CheckboxToggled()"/></td>
                        <td><span ng-bind="attendance.AttendanceId"></span></td>
                        <td><span ng-bind="attendance.User.Username"></span></td>
                        <td><span ng-bind="attendance.TimeIn"></span></td>
                        <td><span ng-bind="attendance.TimeOut"></span></td>
                        <td><span ng-bind="attendance.Hours"></span></td>
                        <td><span ng-bind="attendance.Employee.FullName"></span></td>
                        <td><span ng-bind="attendance.ManagerEmployeeId"></span></td>
                        <td><span ng-bind="attendance.ApprovedBy"></span></td>
                        <td><span ng-bind="attendance.ApprovedDate"></span></td>
                        <td><span ng-bind="attendance.Approved"></span></td>
                        <td ng-click="$event.originalEvent.dropdown = true">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a href="#" ng-click="model.Approve(attendance.AttendanceId)">Approve</a></li>
                                    <li><a href="#" ng-click="model.GoToUpdatePage(attendance.AttendanceId)">Edit</a></li>
                                    <li><a href="#" ng-click="model.Delete(attendance.AttendanceId)">Delete</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>